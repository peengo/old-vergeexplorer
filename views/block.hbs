<div class="row" id="block">
    <div class="col">
        <div class="row">
            <div class="col text-center">
                <h4>
                    <span class="badge badge-secondary">
                        <i class="fa fa-cube text-success mr-1"></i>{{$.BLOCK}} {{ block.height }}</span>
                    <a href="/api/block/{{ block.hash }}" class="btn text-info float-right" role="button" title="{{$.JSON}}">
                        <i class="fa fa-file-alt mr-1"></i>
                    </a>
                </h4>

            </div>
        </div>
        <div class="row">
            <div class="col p-0">
                <ul class="list-group mt-2" id="collapse">
                    <li class="list-group-item">
                        {{#if block.previousblockhash}}
                        <a href="/block/{{ block.previousblockhash }}" class="text-warning mr-2" role="button" title="{{$.PREV_BLOCK}}">
                            <i class="fa fa-angle-left fa-lg text-warning"></i>
                        </a>
                        {{/if}}{{#if block.nextblockhash}}
                        <a href="/block/{{ block.nextblockhash }}" class="text-warning float-right" role="button" title="{{$.NEXT_BLOCK}}">
                            <i class="fa fa-angle-right fa-lg text-warning"></i>
                        </a>
                        {{/if}}
                        <h5 class="d-inline-block mr-1 ml-2">
                            <span class="badge badge-secondary">
                                <i class="fa fa-hashtag mr-2"></i>{{$.BLOCK_HASH}}</span>
                        </h5>
                        <p class="text-wrap text-info mb-0 ml-4" id="block_hash">{{ block.hash }}</p>
                    </li>
                    <li class="list-group-item confirmations">
                        <i class="fa fa-check mr-2"></i>{{$.CONFIRMATIONS}}
                        <i class="fas fa-cog fa-lg text-muted confirmations_refresh mx-2"></i>
                        <span>{{ block.confirmations }}</span>
                    </li>
                    <li class="list-group-item">
                        <i class="fa fa-money-check-alt mr-2"></i>{{$.TXS}}
                        <i class="fa fa-list-ol ml-3 mr-2"></i>
                        <span>{{ block.tx.length }}</span>
                    </li>
                    <li class="list-group-item">
                        <i class="fa fa-clock mr-2"></i>{{$.TIME}}
                        <span class="timestamp text-muted ml-3">{{ block.time }}</span>
                        <p class="text-center mb-0 mt-3">
                            <button class="btn btn-primary px-5 py-1" id="block_more_btn" type="button" aria-expanded="false" aria-controls="collapseExample"
                                data-toggle="collapse" data-target="#collapseList">
                                <i class="fa fa-angle-down fa-lg"></i>
                            </button>
                        </p>
                    </li>
                    <li class="list-group-item collapse" id="collapseList">
                        <div class="row mt-3">
                            <div class="col">
                                <p class="text-muted">{{$.SIZE}}
                                    <br>
                                    <small class="ml-2 size text-white">{{ block.size }}</small>
                                </p>
                                <p class="text-muted">{{$.BITS}}
                                    <br>
                                    <small class="ml-2 text-white">{{ block.bits }}</small>
                                </p>
                                <p class="text-muted">{{$.NONCE}}
                                    <br>
                                    <small class="ml-2 text-white">{{ block.nonce }}</small>
                                </p>
                            </div>
                            <div class="col">
                                <p class="text-muted">{{$.DIFFICULTY}}
                                    <br>
                                    <small class="ml-2 text-white">{{ block.difficulty }}</small>
                                </p>
                                <p class="text-muted">{{$.ALGO}}
                                    <br>
                                    <small class="ml-2 text-white">{{ block.algo }}</small>
                                </p>
                                <p class="text-muted">{{$.ALGO_ID}}
                                    <br>
                                    <small class="ml-2 text-white">{{ block.algo_id }}</small>
                                </p>
                            </div>
                            <div class="col">
                                <p class="text-muted">{{$.MINT}}
                                    <br>
                                    <small class="ml-2 text-white">{{ block.mint }}</small>
                                </p>
                                <p class="text-muted">{{$.VERSION}}
                                    <br>
                                    <small class="ml-2 text-white">{{ block.version }}</small>
                                </p>
                                <p class="text-muted">{{$.FLAGS}}
                                    <br>
                                    <small class="ml-2 text-white">{{ block.flags }}</small>
                                </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <span class="text-muted">{{$.MINED_HASH}}</span>
                                <p class="ml-2 text-white text-wrap small">{{ block.mined_hash }}</p>
                                <span class="text-muted">{{$.PROOF_HASH}}
                                </span>
                                <p class="ml-2 text-white text-wrap small">{{ block.proofhash }}</p>
                                <span class="text-muted">{{$.MERKLE_ROOT}}
                                </span>
                                <p class="ml-2 text-white text-wrap small mb-2">{{ block.merkleroot }}</p>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="row" id="txs">
    <div class="col p-0">
        <h4 class="mb-1 mt-5 text-center">
            <span class="badge badge-secondary">
                <i class="fa fa-money-check-alt text-info mr-2"></i>{{$.TXS}}</span>
        </h4>
        <table class="table table-striped table-hover table-sm mt-3 mb-0" id="block_txs">
            <thead class="sticky-top bg-secondary">
                <tr>
                    <th>
                        <i class="fa fa-hashtag mr-1 d-none d-md-inline"></i>{{$.HASH_TXID}}</th>
                    <th class="text-center">
                        <i class="fa fa-arrow-right mr-1 d-none d-md-inline"></i>{{$.RECIPIENTS}}</th>
                    <th>{{$.AMOUNT_OUT_CURRENCY}}
                        <i class="fa fa-long-arrow-alt-right ml-1 d-none d-md-inline"></i>
                    </th>
                </tr>
            </thead>
            <tbody>
                <!-- AJAX BLOCK TXS -->
            </tbody>
        </table>
        <p class="text-center">
            <i class="fas fa-spinner fa-spin fa-3x text-muted m-3" id="block_txs_loading"></i>
        </p>
        <p class="text-muted small ml-2 mb-0" id="txs_counter">
            <span></span>/{{ block.tx.length }}</p>
        <p class="text-center">
            <button class="btn btn-primary px-5 py-1" type="button" id="block_txs_btn">
                <i class="fa fa-angle-down fa-lg"></i>
            </button>
        </p>
    </div>
</div>