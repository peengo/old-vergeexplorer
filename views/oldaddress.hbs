<div class="row" id="address">
    <div class="col">
        <div class="row">
            <div class="col-12">
                <h4 class="mb-3">
                    <span class="badge badge-secondary">
                        <i class="fa fa-address-card text-info mr-2"></i>Address</span>
                </h4>
            </div>
            <div class="col-12">
                <ul class="list-group">
                    <li class="list-group-item">
                        <div class="row">
                            <div class="col-9">
                                <i class="fa fa-wallet text-warning mr-2 mb-1"></i>Wallet Address (Public Key)
                                <p class="text-wrap m-1">
                                    <span class="text-info" class="text-wrap">{{ data.address }}</span>
                                </p>
                                <div class="row mt-4">
                                    <div class="col">
                                        <i class="fa fa-arrow-right d-none d-md-inline"></i>
                                        <i class="fa fa-wallet mr-1 d-none d-md-inline"></i>Total Received
                                        <p class="text-success m-1 amount">{{ data.received }}</p>
                                    </div>
                                    <div class="col">
                                        <i class="fa fa-wallet d-none d-md-inline"></i>
                                        <i class="fa fa-long-arrow-alt-right mr-1 d-none d-md-inline"></i>Total Sent
                                        <p class="text-danger m-1 amount">{{ data.sent }}</p>
                                    </div>
                                    <div class="col">
                                        <i class="fa fa-wallet mr-1 d-none d-md-inline"></i>Balance
                                        <p class="m-1 amount">{{ data.balance }}</p>
                                    </div>
                                    <div class="col">
                                        <i class="fa fa-dollar-sign mr-1 d-none d-md-inline"></i>Value*
                                        <p class="m-1 value text-warning" data-value="{{ data.balance }}">
                                            <i class="fas fa-spinner fa-spin text-muted"></i>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col mx-2 mt-2 mb-2">
                                <img class="" alt="qrcode" src="https://chart.googleapis.com/chart?cht=qr&chl={{ data.address }}&chs=128x128&chld=L|0">
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
        <small class="text-muted">*Value is calculated with CoinMarketCap's current price</small>
    </div>
</div>
<div class="row mt-5" id="txs">
    <div class="col">
        <h4 class="mb-1">
            <i class="fa fa-money-check-alt text-info mr-1"></i>
            <span class="badge badge-secondary mr-2">Transactions</span>
            <span class="badge badge-primary">{{ txs.length }}</span>
        </h4>
        <table class="table table-striped table-hover mt-3">
            <thead>
                <tr>
                    <th>
                        <i class="fa fa-clock mr-1"></i>Time</th>
                    <th>
                        <i class="fa fa-hashtag mr-1"></i>Transaction ID</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                {{#each txs}}
                <tr class="table-active">
                    <td class="timestamp text-muted">{{ time }}</td>
                    <td>
                        <a href="/tx/{{ txid }}" class="text-info">{{ txid }}</a>
                    </td>
                    {{#if vin}}
                    <td class="text-danger">
                        <i class="fa fa-minus-square mr-1"></i>
                        <span class="amount">{{ value }}</span>
                    </td>
                    {{else}} {{#if both}}
                    <td class="text-info">
                        {{#if negative}}
                        <i class="fa fa-minus-square mr-1"></i>
                        {{else}}
                        <i class="fa fa-plus-square mr-1"></i>
                        {{/if}}
                        <span class="amount">{{ value }}</span>
                    </td>
                    {{else}}
                    <td class="text-success">
                        <i class="fa fa-plus-square mr-1"></i>
                        <span class="amount">{{ value }}</span>
                    </td>
                    {{/if}} {{/if}}
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>